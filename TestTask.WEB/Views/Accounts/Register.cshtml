@model TestTask.WEB.Models.RegisterModel

@{
    ViewBag.Title = "Регистрация";
}

<h2>Регистрация</h2>
<form asp-controller="Accounts" asp-action="Register" method="post" role="form">
    @Html.AntiForgeryToken()
    <table>
        <tr>
            <td><p>Введите свое имя </p></td>
            <td><input type="text" name="Name" /> </td>
        </tr>
        <tr>
            <td><p>Введите свой логин </p></td>
            <td><input type="text" name="UserName" /> </td>
        </tr>
        <tr>
            <td><p>Введите свой адрес </p></td>
            <td><input type="text" name="Adress" /> </td>
        </tr>
        <tr>
            <td><p>Введите пароль :</p></td>
            <td><input type="password" name="Password" /> </td>
        </tr>
        <tr>
            <td><p>Подтвердите пароль :</p></td>
            <td><input type="password" name="ConfirmPassword" /> </td>
        </tr>
        <tr>
            <td><input type="submit" value="Отправить" /> </td>
            <td></td>
        </tr>
    </table>
</form>
<div>
    @Html.ActionLink("Already registered?", "Login")
</div>